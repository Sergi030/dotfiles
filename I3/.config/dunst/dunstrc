[global]
    font = Hack 11
    
    markup = yes
    
    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    # Markup is allowed
    # format = "<b>%s</b>\n%b"
    format = "<b>%a:</b> %s\n%b"
    
    sort = yes
    indicate_hidden = yes
    alignment = left

    # The frequency with wich text that is longer than the notification
    # window allows bounces back and forth.
    # This option conflicts with 'word_wrap'.
    # Set to 0 to disable    
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x5-30+50"
    shrink = no
    transparency = 10
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    line_height = 0
    separator_height = 5
    padding = 20
    horizontal_padding = 20
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/google-chrome-beta
    icon_position = off
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
    frame_width = 2
    frame_color = "#cc241d"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 3

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 3

[urgency_critical]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 3

[spotify]
    appname = Spotify
    format = "<b>%s\n%b</b>"
    urgency = low
    foreground = "#14643b"
